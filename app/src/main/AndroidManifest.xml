<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.vcsserviceandbroadcastpractice">

    <uses-permission
        android:name="android.permission.QUERY_ALL_PACKAGES"
        tools:ignore="QueryAllPackagesPermission" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VCSServiceAndBroadcastPractice"
        tools:targetApi="31">

        <receiver
            android:name=".broadcastreceivers.LogNotificationBroadcastReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.example.vcsserviceandbroadcastpractice.services.START_LOG_ACTION" />
                <action android:name="com.example.vcsserviceandbroadcastpractice.services.STOP_LOG_ACTION" />
            </intent-filter>
        </receiver>

        <receiver android:name=".broadcastreceivers.OnNewPackageInstalledBroadcastReceiver"
            android:exported="false"
            >
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_ADDED"/>
                <action android:name="android.intent.action.PACKAGE_INSTALL"/>
                <data android:scheme="package"/>
            </intent-filter>
        </receiver>

        <receiver android:name=".broadcastreceivers.OnScreenOnBroadcastReceiver"
            android:exported="false"
            >
            <intent-filter >
                <action android:name="android.intent.action.SCREEN_ON"/>
            </intent-filter>
        </receiver>

        <receiver android:name=".broadcastreceivers.OnBootCompletedBroadcastReceiver"
            android:permission="android.permission.RECEIVE_BOOT_COMPLETED"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
                <action android:name="android.intent.action.REBOOT"/>
                <action android:name="android.intent.action.LOCKED_BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>

        <service
            android:name=".services.LogWritingService"
            android:exported="false" />

        <activity
            android:name=".activities.MessageBoxActivity"
            android:exported="false"
            android:noHistory="true"
            android:theme="@style/Theme.AppCompat.Dialog.Alert" />

        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>